+++ b/nb/ide.branding/core.startup/src/org/netbeans/core/startup/Bundle_nb.properties
@@ -26,15 +26,15 @@ SplashShowProgressBar=true
 
 # x, y, w, h
 #NOI18N
-SplashRunningTextBounds=16, 278, 448, 12
+SplashRunningTextBounds=56, 138, 390, 12
 #NOI18N
-SplashProgressBarBounds=16, 275, 448, 2
+SplashProgressBarBounds=55, 267, 413, 3
 #16986: Special font size used only for splash screen
 #NOI18N
-SplashRunningTextFontSize=10
+SplashRunningTextFontSize=12
 # RGB
 #NOI18N
-SplashRunningTextColor=0xFFFFFF
+SplashRunningTextColor=0x3333FF
 #NOI18N
 SplashProgressBarColor=0xFF0000
 #NOI18N
@@ -62,7 +62,7 @@ AboutTextColor=0x000000
 ###################
 
 LBL_splash_window_title=Starting OpenBeans IDE
-currentVersion=OpenBeans IDE Dev (Build {0})
+currentVersion=OpenBeans IDE 2019.06 (Build {0})
 
 MSG_warning=OpenBeans IDE - Warning
 MSG_info=OpenBeans IDE - Information
diff --git a/platform/core.startup/src/org/netbeans/core/startup/Splash.java b/platform/core.startup/src/org/netbeans/core/startup/Splash.java
index 9c9e00a775..46c0018c33 100644
--- a/platform/core.startup/src/org/netbeans/core/startup/Splash.java
+++ b/platform/core.startup/src/org/netbeans/core/startup/Splash.java
@@ -498,10 +498,13 @@ public final class Splash implements Stamps.Updater {
             }
         }
 
+
+        final String windowTitle = NbBundle.getMessage(Splash.class, "LBL_splash_window_title");
         /**
          * Defines the single line of text this component will display.
          */
-        public void setText(final String text) {
+        public void setText(String atext) {
+            final String text = windowTitle + " | " + atext;
             // trying to set again the same text?
             if (text != null && text.equals(this.text)) {
                 return;
